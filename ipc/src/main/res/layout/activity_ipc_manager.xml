<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_fill"
    android:orientation="vertical">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftIcon="@drawable/ic_back_dark"
        app:rightText="@string/str_setting"
        app:titleTextColor="@color/text_main" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:fillViewport="true"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:id="@+id/rl_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/c_black">

                <SurfaceView
                    android:id="@+id/vv_ipc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <sunmi.common.utils.IVideoPlayer
                    android:id="@+id/ivp_cloud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

                <include layout="@layout/include_video_controller_landscape" />

                <include layout="@layout/include_play_fail" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_portrait_video_controller"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_below="@+id/rl_video"
                android:background="@color/c_black"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_play_portrait"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_11"
                    android:scaleType="center"
                    android:src="@mipmap/play_disable" />

                <ImageView
                    android:id="@+id/iv_volume_portrait"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:layout_toStartOf="@+id/tv_quality_portrait"
                    android:scaleType="center"
                    android:src="@mipmap/play_disable" />

                <TextView
                    android:id="@+id/tv_quality_portrait"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/iv_full_screen"
                    android:gravity="center"
                    android:text="@string/str_FHD"
                    android:textColor="@color/c_white"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/iv_full_screen"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_11"
                    android:scaleType="center"
                    android:src="@mipmap/ic_full_screen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white_20a" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_portrait_controller_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_below="@+id/rl_portrait_video_controller"
                android:background="@color/c_black"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_8"
                android:paddingTop="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_10"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_cloud_playback_portrait"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_corner_black_15"
                    android:scaleType="center"
                    android:src="@mipmap/ic_cloud_playback" />

                <LinearLayout
                    android:id="@+id/ll_calender_portrait"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_corner_black_15"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_calender_portrait"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_gravity="center"
                        android:background="@mipmap/ic_calendar"
                        android:gravity="center"
                        android:textColor="@color/c_white"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_screenshot_portrait"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_corner_black_15"
                    android:scaleType="center"
                    android:src="@mipmap/ic_screenshot_disable" />

                <ImageView
                    android:id="@+id/iv_record"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_corner_black_15"
                    android:scaleType="center"
                    android:src="@mipmap/ic_record_disable" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rl_video"
                android:layout_alignBottom="@+id/ll_portrait_controller_bar"
                android:background="@color/black_60">

                <ProgressBar
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_centerInParent="true"
                    android:indeterminate="false"
                    android:indeterminateDrawable="@drawable/loading_common" />
            </RelativeLayout>

            <sunmi.common.view.SmRecyclerView
                android:id="@+id/rv_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_portrait_controller_bar"
                android:layout_marginBottom="@dimen/dp_8"
                android:fadingEdge="none"
                android:focusable="false"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:visibility="visible" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>