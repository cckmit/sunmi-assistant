<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common"
    tools:context=".setting.IpcSettingDetailActivity">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@drawable/ic_back_dark"
        app:titleText="@string/ipc_face_group_create"
        app:titleTextColor="@color/text_main" />

    <TextView
        android:id="@+id/tv_face_group_name"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_72"
        android:layout_gravity="center_vertical"
        android:background="@color/c_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="0dp"
        android:text="@string/ipc_face_group_name"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toStartOf="@+id/cet_face_group_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar" />

    <sunmi.common.view.ClearableEditText
        android:id="@+id/cet_face_group_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_72"
        android:background="@color/c_white"
        android:gravity="center_vertical"
        android:hint="@string/ipc_face_group_name_hint"
        android:inputType="text"
        android:lines="1"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_25"
        android:singleLine="true"
        android:textColor="@color/text_main"
        android:textColorHint="@color/text_caption"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_face_group_name"
        app:layout_constraintStart_toStartOf="@+id/cet_face_group_capacity"
        app:layout_constraintTop_toBottomOf="@+id/title_bar" />

    <TextView
        android:id="@+id/tv_face_group_capacity"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_72"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/c_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="0dp"
        android:text="@string/ipc_face_group_create_capacity"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toStartOf="@+id/cet_face_group_capacity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_face_group_name" />

    <sunmi.common.view.ClearableEditText
        android:id="@+id/cet_face_group_capacity"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_72"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/c_white"
        android:gravity="center_vertical"
        android:inputType="number"
        android:lines="1"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_25"
        android:singleLine="true"
        android:textColor="@color/text_main"
        android:textColorHint="@color/text_caption"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_face_group_capacity"
        app:layout_constraintTop_toBottomOf="@+id/cet_face_group_name" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_72"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/c_white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="0dp"
        android:text="@string/ipc_face_group_mark"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toStartOf="@+id/cet_face_group_mark"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_face_group_capacity" />

    <sunmi.common.view.ClearableEditText
        android:id="@+id/cet_face_group_mark"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_72"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/c_white"
        android:gravity="center_vertical"
        android:hint="@string/ipc_face_group_mark_hint"
        android:inputType="text"
        android:lines="1"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_25"
        android:singleLine="true"
        android:textColor="@color/text_main"
        android:textColorHint="@color/text_caption"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/cet_face_group_capacity"
        app:layout_constraintTop_toBottomOf="@+id/cet_face_group_capacity" />

    <Button
        android:id="@+id/btn_face_group_save"
        style="@style/BtnBigOrange"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/ipc_setting_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>