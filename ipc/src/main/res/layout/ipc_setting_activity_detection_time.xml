<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common"
    android:orientation="vertical">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@drawable/ic_back_dark"
        app:titleText="@string/ipc_setting_detection_time"
        app:titleTextColor="@color/text_main" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_ipc_setting_days_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/ipc_setting_detection_time_day"
        app:type="arrow" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_ipc_setting_time_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showDivider="top"
        app:title="@string/ipc_setting_detection_time_start"
        app:type="arrow" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_ipc_setting_time_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showDivider="top"
        app:title="@string/ipc_setting_detection_time_end"
        app:type="arrow" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_ipc_setting_detection_all_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showDivider="top"
        app:title="@string/ipc_setting_detection_time_all_time"
        app:type="toggle" />

</LinearLayout>