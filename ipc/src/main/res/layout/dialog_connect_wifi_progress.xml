<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="108dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_shap_white_solid">

        <ProgressBar
            android:id="@+id/pBar_progress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/loading_common" />

        <TextView
            android:id="@+id/tv_countDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pBar_progress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/colorText_60"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>
</RelativeLayout>