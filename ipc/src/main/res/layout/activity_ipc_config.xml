<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@mipmap/ic_back_dark"
        app:titleText="@string/str_title_ipc_set"
        app:titleTextColor="@color/colorText" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:text="连接您要设置的摄像头"
        android:textColor="@color/c_black"
        android:textSize="@dimen/sp_23" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_1"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:text="将要添加的摄像头放置在合适的位置，然后接通电源，待信号灯呈【蓝色常亮】"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_2"
        android:layout_margin="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:text="将手机连接到【SUNMI_AP】无线网络，然后点击【开始设置】"
        android:textSize="@dimen/sp_18" />

    <ImageView
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_160"
        android:layout_below="@+id/tv_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@mipmap/ic_fs" />

    <CheckedTextView
        android:id="@+id/ctv_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_config"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:checked="true"
        android:drawableStart="@drawable/selector_privacy"
        android:drawablePadding="@dimen/dp_3"
        android:text="@string/str_click_consent"
        android:textColor="@color/c_black"
        android:textSize="@dimen/sp_10" />

    <Button
        android:id="@+id/btn_config"
        style="@style/BtnOrange"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_10"
        android:text="开始设置"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>