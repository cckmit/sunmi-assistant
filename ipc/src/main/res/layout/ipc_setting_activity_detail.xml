<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText_5"
    android:orientation="vertical"
    tools:context=".setting.IpcSettingDetailActivity">


    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@mipmap/ic_back_dark"
        app:rightText="@string/ipc_setting_delete"
        app:titleText="@string/str_setting_ipc_camera"
        app:titleTextColor="@color/colorText" />


    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_camera_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/c_white"
        app:leftPadding="@dimen/dp_10"
        app:leftText="@string/ipc_setting_name"
        app:parentHeight="@dimen/dp_60"
        app:rightPadding="@dimen/dp_20"
        app:rightTextColor="@color/colorText_60" />


    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_camera_sn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/c_white"
        app:leftPadding="@dimen/dp_10"
        app:leftText="@string/ipc_setting_name"
        app:parentHeight="@dimen/dp_60"
        app:rightPadding="@dimen/dp_20"
        app:rightTextColor="@color/colorText_60" />


</LinearLayout>