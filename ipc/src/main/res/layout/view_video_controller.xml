<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@mipmap/bg_video_title">
        <!--返回-->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_14"
            android:src="@mipmap/ic_back_white" />

        <!--设置-->
        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@mipmap/ic_video_setting" />
    </RelativeLayout>
    <!--录像-->
    <ImageView
        android:id="@+id/iv_record"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_123"
        android:background="@mipmap/ic_recording_normal" />

    <!--截图-->
    <ImageView
        android:id="@+id/iv_screenshot"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/iv_record"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@mipmap/ic_screenshot" />

    <!--设置-->
    <ImageView
        android:id="@+id/iv_live"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/iv_screenshot"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@mipmap/ic_live" />

    <!--加载动画-->
    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="27dp"
            android:layout_height="10dp"
            android:indeterminateDrawable="@mipmap/loading" />

        <TextView
            android:id="@+id/load_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="正在缓冲..."
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </LinearLayout>
    <!--改变播放位置-->
    <LinearLayout
        android:id="@+id/ll_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_rounded_corner_top_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/change_position_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <ProgressBar
            android:id="@+id/change_position_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progressDrawable="@drawable/seekbar_progress" />
    </LinearLayout>

    <!--播放错误-->
    <LinearLayout
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放错误，请重试。"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_shap_green"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:text="点击重试"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <!--改变声音-->
    <LinearLayout
        android:id="@+id/ll_change_volume"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_72"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/dp_44"
        android:layout_marginEnd="@dimen/dp_82"
        android:background="@drawable/bg_set_video_quality"
        android:gravity="center"
        android:visibility="gone">

        <sunmi.common.view.VerticalSeekBar
            android:id="@+id/sBar_voice"
            android:layout_width="@dimen/dp_15"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:max="100" />

        <!--<ProgressBar-->
        <!--android:id="@+id/change_volume_progress"-->
        <!--style="@android:style/Widget.ProgressBar.Horizontal"-->
        <!--android:layout_width="@dimen/dp_10"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginTop="@dimen/dp_8"-->
        <!--android:layout_marginBottom="@dimen/dp_8"-->
        <!--android:max="100"-->
        <!--android:progressDrawable="@drawable/progress_vertical" />-->

    </LinearLayout>

    <!--改变清晰度-->
    <LinearLayout
        android:id="@+id/ll_video_quality"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_48"
        android:layout_above="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/dp_44"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/bg_set_video_quality"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_hd_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/str_HD"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_sd_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/str_SD"
            android:textColor="@color/c_white"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <!--底部控制区-->
    <RelativeLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@mipmap/play_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_toEndOf="@+id/iv_play"
            android:layout_toStartOf="@+id/iv_calender"
            android:gravity="center"
            android:singleLine="true"
            android:text="adfasdfasdfasfasfasdfasdfsadfasfasfasdfasdfasdfasdfsafasdfasdfasdf"
            android:textColor="@color/c_white" />

        <ImageView
            android:id="@+id/iv_calender"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_toStartOf="@+id/iv_volume"
            android:src="@mipmap/ic_calendar" />

        <ImageView
            android:id="@+id/iv_volume"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_toStartOf="@+id/tv_quality"
            android:src="@mipmap/ic_volume" />

        <TextView
            android:id="@+id/tv_quality"
            android:layout_width="@dimen/dp_42"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_alpha_rounded_white"
            android:gravity="center"
            android:text="@string/str_HD"
            android:textColor="@color/c_white"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <DatePicker
        android:id="@+id/dp_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_60"
        android:background="@color/c_white"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_record"
        android:layout_width="140dp"
        android:layout_height="@dimen/dp_32"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_shap_grey"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_text_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:drawableLeft="@drawable/oval_red"
            android:drawablePadding="@dimen/dp_8"
            android:text="@string/str_record_text"
            android:textColor="@color/c_white"
            android:textSize="@dimen/sp_12" />

        <Chronometer
            android:id="@+id/cm_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_text_record"
            android:format="00:00:00"
            android:textColor="@color/c_white"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>


</RelativeLayout>