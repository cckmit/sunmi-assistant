<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorText_5"
    android:layout_height="match_parent">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@mipmap/ic_back_dark"
        app:titleText="夜视模式"
        app:titleTextColor="@color/colorText" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_auto_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:background="@color/c_white"
        app:leftPadding="@dimen/dp_10"
        app:leftText="自动切换"
        app:leftTextColor="@color/colorText"
        app:parentHeight="@dimen/dp_60"
        app:rightPadding="@dimen/dp_20" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sil_auto_switch"
        android:layout_marginTop="0.5dp"
        android:background="@color/c_white"
        app:leftPadding="@dimen/dp_10"
        app:leftText="始终开启"
        app:leftTextColor="@color/colorText"
        app:parentHeight="@dimen/dp_60"
        app:rightPadding="@dimen/dp_20" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sil_open"
        android:layout_marginTop="0.5dp"
        android:background="@color/c_white"
        app:leftPadding="@dimen/dp_10"
        app:leftText="始终关闭"
        app:leftTextColor="@color/colorText"
        app:parentHeight="@dimen/dp_60"
        app:rightPadding="@dimen/dp_20" />


</RelativeLayout>