<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common"
    android:orientation="vertical">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@drawable/ic_back_dark"
        app:titleText="@string/ipc_setting_night_vision_mode"
        app:titleTextColor="@color/text_main" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_auto_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/ipc_setting_night_vision_mode_auto"
        app:type="checked" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showDivider="top"
        app:title="@string/ipc_setting_night_vision_mode_on"
        app:type="checked" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showDivider="top"
        app:title="@string/ipc_setting_night_vision_mode_off"
        app:type="checked" />

</LinearLayout>