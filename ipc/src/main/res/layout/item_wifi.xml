<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_root"
    android:layout_height="@dimen/dp_54">

    <TextView
        android:id="@+id/tv_ap_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_40"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="adfasdfafdas"
        android:textColor="@color/color_555555"
        android:textSize="@dimen/sp_18" />

    <ImageView
        android:id="@+id/iv_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toLeftOf="@+id/iv_signal"
        app:srcCompat="@drawable/check_on" />

    <ImageView
        android:id="@+id/iv_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_10"
        app:srcCompat="@drawable/point_bg_enable" />

</RelativeLayout>