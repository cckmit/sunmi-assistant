<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@drawable/ic_back_dark"
        app:titleText="@string/ipc_setting_rotate"
        app:titleTextColor="@color/text_main" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_degree0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:background="@color/c_white"
        app:leftPadding="@dimen/dp_10"
        app:leftText="@string/ipc_setting_degree0"
        app:leftTextColor="@color/text_main"
        app:parentHeight="@dimen/dp_60"
        app:rightPadding="@dimen/dp_20" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_degree90"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sil_degree0"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/c_white"
        app:leftPadding="@dimen/dp_10"
        app:leftText="@string/ipc_setting_degree90"
        app:leftTextColor="@color/text_main"
        app:parentHeight="@dimen/dp_60"
        app:rightPadding="@dimen/dp_20" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_degree180"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sil_degree90"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/c_white"
        app:leftPadding="@dimen/dp_10"
        app:leftText="@string/ipc_setting_degree180"
        app:leftTextColor="@color/text_main"
        app:parentHeight="@dimen/dp_60"
        app:rightPadding="@dimen/dp_20" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_degree270"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sil_degree180"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/c_white"
        app:leftPadding="@dimen/dp_10"
        app:leftText="@string/ipc_setting_degree270"
        app:leftTextColor="@color/text_main"
        app:parentHeight="@dimen/dp_60"
        app:rightPadding="@dimen/dp_20" />

</RelativeLayout>