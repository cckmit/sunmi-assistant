<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_42"
    android:layout_below="@+id/vv_ipc"
    android:background="@color/c_black"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_ipc_manager">

    <ImageView
        android:id="@+id/iv_play_portrait"
        android:layout_width="@dimen/dp_42"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_11"
        android:scaleType="center"
        android:src="@mipmap/play_disable" />

    <ImageView
        android:id="@+id/iv_volume_portrait"
        android:layout_width="@dimen/dp_42"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dp_2"
        android:layout_toStartOf="@+id/tv_quality_portrait"
        android:scaleType="center"
        android:src="@mipmap/play_disable" />

    <TextView
        android:id="@+id/tv_quality_portrait"
        android:layout_width="@dimen/dp_42"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/iv_full_screen_portrait"
        android:gravity="center"
        android:text="@string/str_FHD"
        android:textColor="@color/c_white"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:id="@+id/iv_full_screen_portrait"
        android:layout_width="@dimen/dp_42"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dp_11"
        android:scaleType="center"
        android:src="@mipmap/ic_full_screen_enabled" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_alignParentBottom="true"
        android:background="@color/white_20a" />
</RelativeLayout>