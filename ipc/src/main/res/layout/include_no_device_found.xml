<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_no_device"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_no_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableTop="@mipmap/ic_no_ipc"
        android:drawablePadding="@dimen/dp_16"
        android:text="@string/tip_no_ipc_found"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/tv_check_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_no_wifi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/tip_check_ipc_wifi"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/tv_check_network"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/edittext_solid_orange"
        android:text="@string/str_refresh"
        android:textColor="@color/c_white"
        android:textSize="@dimen/sp_16" />

</RelativeLayout>