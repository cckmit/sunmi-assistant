<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_no_device"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/tv_no_ipc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableTop="@mipmap/ic_no_ss"
        android:drawablePadding="@dimen/dp_16"
        android:gravity="center"
        android:text="@string/tip_no_ipc_found"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/tv_check_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_no_ipc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/tip_check_ipc_wireless"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/sp_14"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_24"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_retry"
        style="@style/BtnMediumWhite"
        android:layout_below="@+id/tv_check_network"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/str_refresh" />

</RelativeLayout>