<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_84">

    <ImageView
        android:id="@+id/iv_device"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_alignEnd="@+id/iv_device"
        android:layout_marginTop="@dimen/dp_20" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_64"
        android:layout_toEndOf="@+id/iv_device"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_main"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name"
        android:layout_alignParentEnd="true"
        android:textColor="@color/text_caption"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_adjust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:drawableEnd="@drawable/ic_right_arrow_small"
        android:drawablePadding="@dimen/dp_4"
        android:text="@string/str_adjust_screen"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>