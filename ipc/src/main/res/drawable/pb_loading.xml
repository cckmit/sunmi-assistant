<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360.0">
    <shape
        android:innerRadius="@dimen/dp_120"
        android:shape="ring"
        android:thicknessRatio="80"
        android:useLevel="false">
        <gradient
            android:centerColor="@color/colorLoadingCenter"
            android:centerY="0.50"
            android:endColor="@color/colorLoadingStart"
            android:startColor="@color/colorLoadingEnd"
            android:type="sweep" />
    </shape>
</rotate>