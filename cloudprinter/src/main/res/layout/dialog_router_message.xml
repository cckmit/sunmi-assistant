<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlDialog"
        style="@style/marginLeftRight20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dialog_shap_white_solid"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="@string/str_tip_link_router"
            android:textColor="@color/color_dialog_content"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rlPassword"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@+id/tvContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/edittext_edge_grey2">

            <sunmi.common.view.ClearableEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@null"
                android:hint="@string/hint_input_router_pwd"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText_40"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlPassword"
            android:layout_marginTop="@dimen/dp_28"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/colorLoginLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/str_cancel"
                    android:textColor="@color/color_dialog_cancel"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <View
                    android:id="@+id/vLine"
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorLoginLine"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnSure"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/str_confirm"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>