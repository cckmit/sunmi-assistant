<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunmi.cloudprinter">

    <!-- 蓝牙 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!-- 仅在支持BLE（即蓝牙4.0）的设备上运行 -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application>
        <activity
            android:name=".ui.Activity.PrinterSearchActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.Activity.WifiConfigActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.Activity.PrinterManageActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.Activity.StartConfigPrinterActivity_"
            android:screenOrientation="portrait" />
    </application>

</manifest>