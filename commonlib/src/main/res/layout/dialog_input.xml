<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_8">

    <LinearLayout
        android:id="@+id/ll_dialog"
        android:layout_width="@dimen/dp_270"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/DialogTitle"
            android:layout_marginTop="@dimen/dp_25" />

        <sunmi.common.view.ClearableEditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/edittext_edge_grey2"
            android:gravity="top"
            android:padding="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_disable"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_input_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_25"
            android:paddingTop="@dimen/dp_2"
            android:visibility="gone"
            android:textColor="@color/caution_primary"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@color/c_divider" />

        <include layout="@layout/include_dialog_button_bottom" />
    </LinearLayout>

</android.support.v7.widget.CardView>