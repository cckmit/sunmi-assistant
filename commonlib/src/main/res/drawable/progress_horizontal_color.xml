<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#E6E8EB"
                android:centerY="0.75"
                android:endColor="#E6E8EB"
                android:startColor="#E6E8EB" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#FF6000"
                    android:centerY="0.75"
                    android:endColor="#FF6000"
                    android:startColor="#FF6000" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#FF6000"
                    android:centerY="0.75"
                    android:endColor="#FF6000"
                    android:startColor="#FF6000" />
            </shape>
        </clip>
    </item>

</layer-list>

