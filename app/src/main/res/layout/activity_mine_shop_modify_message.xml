<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@drawable/ic_back_dark"
        app:rightText="@string/str_save"
        app:titleText="@string/str_edit_store_name"
        app:titleTextColor="@color/text_main" />

    <sunmi.common.view.ClearableEditText
        android:id="@+id/et_shop_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:layout_centerVertical="true"
        android:background="@color/c_white"
        android:imeOptions="actionSearch"
        android:maxLength="40"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="@dimen/dp_25"
        android:singleLine="true"
        android:textColor="@color/text_main"
        android:textColorHint="@color/text_caption"
        android:textSize="@dimen/sp_18"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar" />

    <RelativeLayout
        android:id="@+id/rl_square"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:background="@color/c_white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar">

        <sunmi.common.view.ClearableEditText
            android:id="@+id/et_shop_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:layout_centerVertical="true"
            android:background="@color/c_white"
            android:imeOptions="actionSearch"
            android:maxLength="40"
            android:paddingStart="@dimen/dp_25"
            android:paddingEnd="@dimen/dp_80"
            android:singleLine="true"
            android:textColor="@color/text_main"
            android:textColorHint="@color/text_caption"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_square"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="@string/company_square"
            android:textColor="@color/text_main"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>