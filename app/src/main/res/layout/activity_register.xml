<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:dividerColor="@color/white_10a"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@mipmap/ic_back_white"
        app:titleText="@string/str_register"
        app:titleTextColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/title_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white_60a" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white_20a" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white_20a" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        style="@style/marginLeftRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_157"
        android:text="@string/tip_input_phone_number"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_28" />

    <RelativeLayout
        android:id="@+id/rl"
        style="@style/marginLeftRight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_below="@+id/tv"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/edittext_edge_white">

        <TextView
            android:id="@+id/tv86"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:text="@string/str_86"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/tv86"
            android:text="|"
            android:textColor="@color/white_10a"
            android:textSize="@dimen/sp_16" />

        <sunmi.common.view.ClearableEditText
            android:id="@+id/etMobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toEndOf="@+id/tvLine"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnNext"
        style="@style/marginLeftRight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_below="@+id/rl"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/edittext_soild_orange"
        android:text="@string/str_get_captcha"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_32"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/BtnIsSelected"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/sunmi_register_agree"
            android:textColor="@color/white_40a"
            android:textSize="@dimen/sp_10" />

        <RelativeLayout
            android:id="@+id/rlUserProtocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunmi_user_protocol"
                android:textColor="@color/white_40a"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="0.6dp"
                android:layout_below="@+id/tvPro"
                android:layout_centerHorizontal="true"
                android:background="@color/white_40a" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_and"
            android:textColor="@color/white_40a"
            android:textSize="@dimen/sp_10" />

        <RelativeLayout
            android:id="@+id/rlUserPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_privacy"
                android:textColor="@color/white_40a"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:layout_width="@dimen/dp_40"
                android:layout_height="0.6dp"
                android:layout_below="@+id/tvPri"
                android:layout_centerHorizontal="true"
                android:background="@color/white_40a" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>