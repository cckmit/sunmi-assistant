<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="@color/transparent">

        <sunmi.common.view.CircleImage
            android:id="@+id/civ_avatar"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_60"
            android:src="@mipmap/default_avatar"
            app:radius="@dimen/dp_40" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_77"
            android:layout_toEndOf="@+id/civ_avatar"
            android:text="@string/str_default_nickname"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_toEndOf="@+id/civ_avatar"
            android:background="@drawable/shap_normal_2"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@mipmap/ic_right_arrow_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorText_10" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_head"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlCompany"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_72">

                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_26"
                    android:background="@mipmap/ic_company" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_toEndOf="@+id/iv6"
                    android:text="@string/str_current_company"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_18" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_right_arrow_small" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorText_10" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlStore"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_72"
                android:layout_below="@+id/rlCompany">

                <ImageView
                    android:id="@+id/iv0"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_26"
                    android:background="@mipmap/ic_my_business" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_toEndOf="@+id/iv0"
                    android:text="@string/str_store_manage"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_18" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_right_arrow_small" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorText_10" />
            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:layout_below="@+id/rlStore"
                android:background="@color/colorText_10" />

            <cn.bingoogolapple.badgeview.BGABadgeRelativeLayout
                android:id="@+id/rlMsg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_72"
                android:layout_below="@+id/v1"
                app:badge_horizontalMargin="@dimen/dp_40"
                app:badge_textSize="@dimen/sp_12">

                <ImageView
                    android:id="@+id/iv12"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_26"
                    android:background="@mipmap/ic_my_msg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_toEndOf="@+id/iv12"
                    android:text="@string/str_my_msg"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_18" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_right_arrow_small" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorText_10" />
            </cn.bingoogolapple.badgeview.BGABadgeRelativeLayout>


            <RelativeLayout
                android:id="@+id/rlOrder"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_72"
                android:layout_below="@+id/rlMsg"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_26"
                    android:background="@mipmap/ic_my_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_toEndOf="@+id/iv3"
                    android:text="@string/str_my_order"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_18" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_right_arrow_small" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorText_10" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAddress"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_72"
                android:layout_below="@+id/rlOrder"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_26"
                    android:background="@mipmap/ic_address" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_toEndOf="@+id/iv4"
                    android:text="@string/str_receive_address"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_18" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_right_arrow_small" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorText_10" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlCoupon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_72"
                android:layout_below="@+id/rlAddress"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_26"
                    android:background="@mipmap/ic_coupon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_toEndOf="@+id/iv5"
                    android:text="@string/str_coupon"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_18" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_right_arrow_small" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorText_10" />
            </RelativeLayout>

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:layout_below="@+id/rlCoupon"
                android:background="@color/colorText_10" />

            <RelativeLayout
                android:id="@+id/rlHelp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_72"
                android:layout_below="@+id/v2"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_26"
                    android:background="@mipmap/ic_help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_toEndOf="@+id/iv1"
                    android:text="@string/str_help_feedback"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_18" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_right_arrow_small" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorText_10" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSetting"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_72"
                android:layout_below="@+id/rlHelp">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_26"
                    android:background="@mipmap/ic_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_toEndOf="@+id/iv2"
                    android:text="@string/str_my_setting"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_18" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_18"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_right_arrow_small" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorText_10" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>