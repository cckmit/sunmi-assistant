<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText_5">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@mipmap/ic_back_dark"
        app:titleText="@string/str_setting"
        app:titleTextColor="@color/colorText" />

    <RelativeLayout
        android:id="@+id/rlAccountSafe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/title_bar"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_25"
            android:text="@string/str_account_safety"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_18"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_right_arrow_small" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorText_10" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlAbout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/rlAccountSafe"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_25"
            android:text="@string/str_about"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/colorText_60"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_18"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_right_arrow_small" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorText_10" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlClearCash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/rlAbout"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_25"
            android:text="@string/str_clear_cache"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/colorText_60"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_18"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_right_arrow_small" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorText_10" />
    </RelativeLayout>


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:text="@string/str_logout"
        android:textColor="@color/common_orange"
        android:textSize="@dimen/sp_18">

    </Button>


</RelativeLayout>