<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dashboard_bg_chart_marker"
    android:elevation="@dimen/dp_2"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_6"
    android:paddingEnd="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_6">

    <TextView
        android:id="@+id/tv_dashboard_marker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_card_tab_rate"
        android:textColor="@color/color_777E8C"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_dashboard_marker_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_303540"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_dashboard_marker_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_777E8C"
        android:textSize="@dimen/sp_10" />

</LinearLayout>
