<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_172"
        android:layout_height="@dimen/dp_26"
        android:layout_gravity="center"
        android:background="@drawable/dashboard_bg_period_tab_border">

        <TextView
            android:id="@+id/tv_dashboard_top_today"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_22"
            android:layout_marginStart="@dimen/dp_2"
            android:background="@drawable/dashboard_bg_period_tab_text_selected"
            android:gravity="center"
            android:text="@string/dashboard_today"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_dashboard_top_week"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dashboard_top_week"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_22"
            android:background="@drawable/dashboard_bg_period_tab_text"
            android:gravity="center"
            android:text="@string/dashboard_this_week"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_dashboard_top_month"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_dashboard_top_today"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dashboard_top_month"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_2"
            android:background="@drawable/dashboard_bg_period_tab_text"
            android:gravity="center"
            android:text="@string/dashboard_this_month"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_dashboard_top_week"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>