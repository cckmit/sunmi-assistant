<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText_5">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@drawable/ic_back_dark"
        app:titleText="@string/str_account_safety"
        app:titleTextColor="@color/text_main" />

    <RelativeLayout
        android:id="@+id/rlPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/title_bar"
        android:background="@color/c_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_25"
            android:text="@string/str_password"
            android:textColor="@color/text_main"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/str_modify"
            android:textColor="@color/text_caption"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_18"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_right_arrow_small" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/c_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlMobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/rlPassword"
        android:background="@color/c_white"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_25"
            android:text="@string/str_phone"
            android:textColor="@color/text_main"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/connect_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/str_bound"
            android:textColor="@color/text_caption"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_18"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_right_arrow_small" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/c_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlEmail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/rlMobile"
        android:background="@color/c_white"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_25"
            android:text="@string/str_email_address"
            android:textColor="@color/text_main"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/str_unbind"
            android:textColor="@color/text_caption"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_18"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_right_arrow_small" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/c_divider" />
    </RelativeLayout>


</RelativeLayout>