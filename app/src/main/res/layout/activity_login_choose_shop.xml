<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_common"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@mipmap/ic_back_dark"
        app:titleText="@string/str_my_shop"
        app:titleTextColor="@color/colorText" />

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/bgarl_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_white" />
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

    <LinearLayout
        android:id="@+id/ll_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_tip_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_80"
            android:drawableTop="@drawable/ic_no_data"
            android:drawablePadding="@dimen/dp_16"
            android:gravity="center"
            android:text="数据获取失败"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center"
            android:text="请检查网络后刷新页面～"
            android:textColor="@color/colorText_60"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/btn_refresh"
            style="@style/BtnGrayRounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/str_refresh"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</RelativeLayout>
