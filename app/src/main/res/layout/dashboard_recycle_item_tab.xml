<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/dashboard_btn_bg_corner_normal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dashboard_today"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dashboard_btn_bg_corner"
            android:gravity="center"
            android:text="@string/dashboard_today"
            android:textColor="@drawable/dashboard_switch_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_dashboard_week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dashboard_btn_bg_corner"
            android:gravity="center"
            android:text="@string/dashboard_this_week"
            android:textColor="@drawable/dashboard_switch_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_dashboard_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dashboard_btn_bg_corner"
            android:gravity="center"
            android:text="@string/dashboard_this_month"
            android:textColor="@drawable/dashboard_switch_text_color"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color_85858A" />

</LinearLayout>