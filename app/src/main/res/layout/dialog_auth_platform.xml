<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shap_top_radus_left_right"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_sunmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@mipmap/ic_logo_text"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_auth_platform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_25"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_25"
        android:background="#FFF4F4F5" />

    <TextView
        android:id="@+id/tv_protocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_25"
        android:textColor="@color/colorText_40"
        android:textSize="@dimen/sp_12" />

    <Button
        android:id="@+id/btnAllow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_25"
        android:background="@drawable/button_corners_solid_orange"
        android:text="@string/str_authorization_permission"
        android:textColor="@color/c_white"
        android:textSize="@dimen/sp_16" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_32"
        android:background="@drawable/button_corners_edge_orange"
        android:text="@string/str_authorization_deny"
        android:textColor="@color/common_orange"
        android:textSize="@dimen/sp_16" />

</LinearLayout>