<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText_5"
    android:orientation="vertical">

    <sunmi.common.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@mipmap/ic_back_dark"
        app:titleText="@string/str_msg_center"
        app:titleTextColor="@color/colorText"
        app:rightText="@string/str_setting"/>

    <sunmi.common.view.tablayout.CommonTabLayout
        android:id="@+id/tab_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/c_white"
        app:tl_iconVisible="false"
        app:tl_textsize="@dimen/sp_15"
        app:tl_textUnselectColor="@color/colorText"
        app:tl_textSelectColor="@color/color_FF6000" />

    <FrameLayout
        android:id="@+id/frame_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>