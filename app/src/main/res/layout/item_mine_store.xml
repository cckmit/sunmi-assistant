<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/bg_common">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center_vertical"
        android:background="@color/c_white"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25"
        android:singleLine="true"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_shop_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/c_white"
        app:imageRight="@mipmap/ic_right_arrow_small"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:leftPadding="@dimen/dp_15"
        app:leftText="门店详情"
        app:leftTextSize="@dimen/sp_16"
        app:parentHeight="@dimen/dp_60"
        app:rightPadding="@dimen/dp_20" />

    <sunmi.common.view.SettingItemLayout
        android:id="@+id/sil_shop_face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sil_shop_detail"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@color/c_white"
        app:imageRight="@mipmap/ic_right_arrow_small"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:leftPadding="@dimen/dp_15"
        app:leftText="人脸分组"
        app:leftTextSize="@dimen/sp_16"
        app:parentHeight="@dimen/dp_60"
        app:rightPadding="@dimen/dp_20" />

</RelativeLayout>