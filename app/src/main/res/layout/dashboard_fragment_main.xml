<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_dashboard_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple">

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/layout_dashboard_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_dashboard_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

    <View
        android:id="@+id/view_dashboard_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/c_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_shop_title" />

    <sunmi.common.view.DropdownMenu
        android:id="@+id/layout_shop_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_82"
        android:background="@drawable/dashboard_bg_top"
        android:gravity="center"
        android:paddingTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/layout_top_period_tab"
        layout="@layout/dashboard_top_period_tab"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_64"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

