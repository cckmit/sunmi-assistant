<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape
            android:shape="oval"
            android:useLevel="false">

            <size
                android:width="4dp"
                android:height="4dp" />

            <solid android:color="@color/color_F5F7FA" />

        </shape>

    </item>
    <item>
        <shape
            android:innerRadius="2dp"
            android:shape="ring"
            android:thickness="2dp"
            android:useLevel="false">

            <size
                android:width="8dp"
                android:height="8dp" />

            <solid android:color="@color/common_orange" />

        </shape>
    </item>

</layer-list>